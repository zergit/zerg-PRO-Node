generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
}

model Post {
  id        Int         @id @default(autoincrement())
  title     String
  content   String
  author    User        @relation(fields: [authorId], references: [id])
  authorId  Int
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  posts     PostOnTag[]
}

model Tag {
  id    Int         @id @default(autoincrement())
  name  String
  posts PostOnTag[]
}

model PostOnTag {
  id        Int      @id @default(autoincrement())
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int
  tag       Tag      @relation(fields: [tagId], references: [id])
  tagId     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Products {
  id          Int      @id @default(autoincrement())
  name        String
  appointmen  String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
